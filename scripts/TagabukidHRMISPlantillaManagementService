	@ProxyMethod
	public def getColumns( def o ) {
		def cols = [
			[name:'itemno', caption:'Item No.' ],
			[name:'jobposition', caption:'Job Position' ],
			[name:'fund', caption:'Fund' ],
			[name:'accounttitle', caption:'Account Title' ],
			[name:'isfunded', caption:'Funded' ],
			[name:'incrementtype', caption:'Increment Type' ],
			[name:'positionserviceclassification', caption:'Position Service Classification' ],
			[name:'positionservicesubclassification', caption:'Position Service Sub Classification' ],
		];
		return cols;
	}

