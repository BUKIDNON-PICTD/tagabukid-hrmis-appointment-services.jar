    @ProxyMethod
    public def getPDSNo(){
		def appcode = "PDS"
		def yr      = dtSvc.serverYear;
		// def mnth    = dtSvc.serverMonth;
		// def smon    = ( mnth < 10 ) ? "0"+mnth : mnth+"";
		def prefix  = appcode+yr;
		return prefix+seqSvc.getNextFormattedSeries(prefix);
    }

    @ProxyMethod
    public def getVersionNo(){
		def appcode = "V"
		def yr      = dtSvc.serverYear;
		// def mnth    = dtSvc.serverMonth;
		// def smon    = ( mnth < 10 ) ? "0"+mnth : mnth+"";
		def prefix  = appcode+yr;
		return prefix+seqSvc.getNextFormattedSeries(prefix);
    }

}
